{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "*": [
        "test/*"
      ]
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "exclude": [
    "node_modules",
    ".yarn"
  ],
  "include": [
    ".eslintrc.js",
    "next-env.d.ts",
    "*.js",
    "**/*.mjs",
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "test/*",
  ]
}